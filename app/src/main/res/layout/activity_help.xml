<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    tools:context=".HelpActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_help"
        android:layout_width="match_parent"
        app:title="Aide"
        app:titleTextColor="@color/white"
        android:background="@color/button_color"
        android:layout_height="?attr/actionBarSize"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_below="@+id/toolbar_help"
       android:layout_marginRight="15dp"
       android:layout_marginLeft="15dp">
       <TextView
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp"
           android:text="Mohamed OUESLATI"
           android:layout_below="@id/toolbar_help"
           android:fontFamily="@font/montserrat"
           android:textSize="25sp"
           android:textStyle="bold"
           android:textColor="@color/white"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/name"
           android:fontFamily="@font/montserrat"
           android:textSize="16sp"
           android:textColor="@color/white"
           android:text="Etudiant en informatique et multimédias à l'ISAMM"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp"
           android:text="Islem OUEDERNI"
           android:layout_below="@id/toolbar_help"
           android:fontFamily="@font/montserrat"
           android:textSize="25sp"
           android:textStyle="bold"
           android:textColor="@color/white"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/name"
           android:fontFamily="@font/montserrat"
           android:textSize="16sp"
           android:textColor="@color/white"
           android:text="Etudiante en informatique et multimédias à l'ISAMM"/>

   </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/montserrat"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Copy © ISAMM 2021"/>


</RelativeLayout>